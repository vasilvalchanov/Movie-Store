@model MovieStore.DTOs.ViewModels.ActorViewModel

<h3 class="text-center">Are you sure you want to delete this actor?</h3>
<div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4 movie-container">
            @Html.Partial("_ActorPartial")
        </div>

        </div>
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                @Html.ActionLink("Cancel", "Index","Actors", new {Area = ""}, htmlAttributes: new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>
