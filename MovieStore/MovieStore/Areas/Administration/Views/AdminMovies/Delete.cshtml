@model MovieStore.DTOs.ViewModels.MovieViewModel

<h3 class="text-center">Are you sure you want to delete this movie?</h3>
<div>
    <div class="col-md-6 col-md-offset-3 movie-container">
        <div>@Html.Partial("_MoviePartial", @Model)</div>
    </div>
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", "Movies", new { Area = "" }, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>
