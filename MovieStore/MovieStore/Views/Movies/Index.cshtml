@model List<MovieStore.DTOs.ViewModels.MovieViewModel>

<h2 class="text-center">Movie Gallery</h2>


@for (int i = 0; i < Model.Count(); i++)
{

    if (i%2 == 0)
    {
        @:<div class="row">
    }

    if (i%2 == 0 && i != 0)
    {
        @:</div>
    }
    <div class="col-md-6 movie-container">
        @Html.Partial("_MoviePartial", Model[i])
    </div>
}
