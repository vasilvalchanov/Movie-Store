@model MovieStore.DTOs.ViewModels.CommentViewModel


<h3 class="text-center">Are you sure you want to delete this comment?</h3>
<div>

    <div>@Html.Partial("_CommentPartial", @Model)</div>

    <div class="col-md-4 col-md-offset-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center" style="margin-top: 10px">
            <input type="hidden" name="MovieId" value="@Model.MovieId"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
            @Html.ActionLink("Cancel", "MovieComments", "Comments", new {Area = "", id = @Model.MovieId}, new {@class = "btn btn-info"})
        </div>
    }
        </div>
</div>


