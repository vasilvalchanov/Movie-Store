@model MovieStore.DTOs.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3 class="text-center">Are you sure you want to delete this comment?</h3>
<div>

    @Html.Partial("_CommentPartial", @Model)

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="hidden" name="MovieId" value="@Model.MovieId"/>
            <input type="submit" value="Delete" class="btn btn-info"/> |
            @Html.ActionLink("Cancel", "MovieComments", new {id = @Model.MovieId})
        </div>
    }
</div>
