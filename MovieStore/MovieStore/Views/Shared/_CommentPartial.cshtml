@model MovieStore.DTOs.ViewModels.CommentViewModel

<div class="row col-md-6 col-md-offset-3" id="comment">

    <span>@Html.ActionLink(".", "Delete", "Comments", @Model, new {@class= "glyphicon glyphicon-remove pull-right" })</span>
    
    <h3 class="text-center text-danger">@Html.DisplayFor(model => model.Content)</h3>
    <div>
        <h5 class="col-md-2 text-right comment-data">Date:</h5>
        <h5 class="col-md-4 text-left comment-data">@Html.DisplayFor(model => model.CreatedAt)</h5>

        <h5 class="col-md-2 text-right comment-data">Author:</h5>
        <h5 class="col-md-4 text-left comment-data">@Html.DisplayFor(model => model.User)</h5>
    </div>
</div>