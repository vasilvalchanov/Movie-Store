@model List<MovieStore.DTOs.ViewModels.ActorViewModel>

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Actors</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@for (int i = 0; i < Model.Count(); i++)
{

    if (i%3 == 0)
    {
        @:<div class="row">
    }

    if (i%3 == 0 && i != 0)
    {
        @:</div>
    }
    <div class="col-md-4 movie-container">
        @Html.Partial("_ActorPartial", Model[i]);
    </div>
}

